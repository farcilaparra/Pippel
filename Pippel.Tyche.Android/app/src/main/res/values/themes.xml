<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tyche" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke</item>
        <item name="colorPrimaryVariant">@color/white_smoke</item>
        <item name="colorOnPrimary">@color/matterhorn</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/matterhorn</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/matterhorn</item>
        <item name="android:listDivider">@color/spanish_gray_op25</item>
        <item name="colorBackground">@color/white_smoke</item>
        <item name="colorEditText">@color/whisper_op70</item>
        <item name="colorEditTextContrast">@color/matterhorn</item>
        <item name="colorSearchEditText">@color/whisper</item>
        <item name="colorSearchEditTextContrast">@color/matterhorn</item>
        <item name="colorApp">@color/app_light</item>
        <item name="colorText">@color/matterhorn</item>
        <item name="colorLightText">@color/matterhorn_op70</item>
        <item name="colorUpIndicator">@color/up_indicator_light</item>
        <item name="colorDownIndicator">@color/down_indicator_light</item>
        <item name="colorStableIndicator">@color/stable_indicator_light</item>
        <item name="colorListBorder">@color/spanish_gray_op25</item>
        <item name="colorProgressIndicator">@color/app_light</item>
        <item name="colorProgressTrack">@color/app_light_op25</item>
    </style>
</resources>